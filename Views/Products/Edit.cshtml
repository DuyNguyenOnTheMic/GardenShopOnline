@model GardenShopOnline.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<input type="text" hidden id="URLgetCategory" value="@Url.Action("getCategory", "Categories")" />
<input type="text" hidden id="PEdit_Description" value="@Model.Description" />
<input type="text" hidden id="URLgetType" value="@Url.Action("getType", "Types")" />

<section class="pcoded-main-container">
    <div class="pcoded-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h5 class="m-b-10">Product Management</h5>
                        </div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html"><i class="feather icon-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#!">Products</a></li>
                            <li class="breadcrumb-item"><a href="#!">Edit Product</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ breadcrumb ] end -->
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Ccreate product</h5>
                    </div>
                    <div class="card-body">
                        <form class="needs-validation" method="post" action="@Url.Action("UpdateProduct", "products")" enctype="multipart/form-data" novalidate>
                            <input hidden id="edit_id" name="Product_id" value="@Model.ID" />
                            <input hidden id="edit_Category_id" value="@Model.CategoryID" />
                            <input hidden id="edit_Type_id" value="@Model.TypeID" />

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>
                                            Name <span class="text-danger">*</span>
                                        </label>
                                        <div class="position-relative">
                                            <input type="text" placeholder="Enter product name..." id="add_name" class="form-control" value="@Model.Name" name="name_product" pattern="\S+.*" required>
                                            <div class="invalid-feedback">
                                                Please enter product name !
                                            </div>
                                        </div> <!---->
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Category <span class="text-danger">*</span>
                                        </label>
                                        <div class="position-relative">
                                            <select class="custom-select" id="CategoryDropdown" name="CategoryDropdown" required>
                                            </select>
                                            <div class="invalid-feedback">Please select product category !</div>
                                        </div> <!---->

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Category <span class="text-danger">*</span>
                                        </label>
                                        <div class="position-relative">
                                            <select class="custom-select" id="TypeDropdown" name="TypeDropdown" required>
                                            </select>
                                            <div class="invalid-feedback">Please select product category !</div>
                                        </div> <!---->

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Quantity <span class="text-danger">*</span>
                                        </label>
                                        <div class="position-relative">
                                            <input type="text" placeholder="Enter product quantity... " value="@Model.Quantity" id="add_quantity" class="form-control " name="quantity" pattern="\S+.*" required>
                                            <div class="invalid-feedback">
                                                Please enter product quantity !
                                            </div>
                                        </div> <!---->
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Price <span class="text-danger">*</span>
                                        </label>
                                        <div class="position-relative">
                                            <input type="text" placeholder="Enter product price..." value="@Model.Price.ToString("N0")" id="product-price" max="999999999999" class="form-control "
                                                   pattern="[0-9.,]+" data-type="number" name="price" required>
                                            <div class="invalid-feedback">
                                                Product price cannot be blank !
                                            </div>
                                        </div> <!---->

                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Description</label>
                                        <div class="position-relative">
                                            <textarea id="description" name="description" placeholder="Enter product description..." rows="4" class="form-control"></textarea>
                                        </div>
                                        <!---->
                                    </div>
                                </div>
                                <script>

                                </script>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>
                                            Image <span class="text-danger">(*)</span>
                                        </label>
                                        <div class="position-relative">
                                            <div class="img-item">
                                                <img id="output" class="img-item-link" src="@Url.Content("~/assets/images/" +Model.Image)" />

                                            </div>
                                            <input type="file" name="file" id="file" class="form-control" accept="image/x-png,image/gif,image/jpeg" onchange="loadFile_edit(event)" />
                                            <div class="invalid-feedback">
                                                Please choose an image for the product!
                                            </div>
                                        </div>
                                        <script>
                                            var loadFile_edit = function (event) {
                                                var image = document.getElementById('output');
                                                image.src = URL.createObjectURL(event.target.files[0]);
                                            };
                                        </script>
                                    </div>
                                </div>


                                <div class="col-md-12 ">
                                    <button type="submit" class="btn btn-primary float-right">Save</button>

                                    <button type="button" class="btn  btn-secondary float-right" onclick="location.href='@Url.Action("Index","Products")';">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
        <!-- [ Main Content ] end -->

    </div>
</section>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
