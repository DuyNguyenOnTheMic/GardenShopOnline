@model GardenShopOnline.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="login-form">
        <h4 class="login-title">Register</h4>
        <div class="row">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="col-md-12">
                <label>Email Address*</label>
                @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email addresss" })
            </div>
            <div class="col-md-6">
                <label>Password</label>
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
            </div>
            <div class="col-md-6">
                <label>Confirm Password</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm Password" })
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">Register</button>
            </div>
        </div>
    </div>
}